{
    "compilerOptions": {
        "target": "es5",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": false,
        "noImplicitAny": false,
        "noImplicitReturns": false,
        "removeComments": false,
        "resolveJsonModule": true,
        "strictNullChecks": false,
        "skipLibCheck": true,
        "lib": ["dom", "es2018"],
        "strict": true,
        "outDir": "./build/",
        "sourceMap": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "__components/*": ["./src/components/*"],
            "__pages/*": ["./src/pages/*"],
            "__fonts/*": ["./src/fonts/*"],
            "__api/*": ["./src/api/*"],
            "__utils/*": ["./src/utils/*"],
            "__images/*": ["./src/images/*"],
        },
        "typeRoots": ["typings/**/*.d.ts", "node_modules/@types"],
    },
    "compileOnSave": false,
    "exclude": ["public", "node_modules", "build"]
}
